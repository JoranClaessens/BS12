<Window x:Class="Crypto_Program.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="350">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Gebruikersnaam" Width="100" Margin="30,0"/>
                <TextBox x:Name="gebruikerBox" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20">
                <TextBlock Text="Paswoord" Width="100" Margin="30,0"/>
                <PasswordBox x:Name="paswoordBox" Width="150"/>
            </StackPanel>
            <StackPanel>
                <Button x:Name="aanmeldButton" Content="Aanmelden" HorizontalAlignment="Center" Width="150"/>
                <TextBlock Text="OF" HorizontalAlignment="Center" Margin="010"/>
                <Button x:Name="registreerButton" Content="Nieuwe gebruiker" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="150"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
